- model_class = @user.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @user.name
%p
  %strong= model_class.human_attribute_name(:password) + ':'
  %br
  = @user.password
%p
  %strong= model_class.human_attribute_name(:mail) + ':'
  %br
  = @user.mail
%p
  %strong= model_class.human_attribute_name(:username) + ':'
  %br
  = @user.username
%p
  %strong= model_class.human_attribute_name(:biografia) + ':'
  %br
  = @user.biografia
%p
  %strong= model_class.human_attribute_name(:country_id) + ':'
  %br
  = Country.find(@user.country_id).country
%p
  %strong= model_class.human_attribute_name(:language_id) + ':'
  %br
  = Language.find(@user.language_id).language

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
