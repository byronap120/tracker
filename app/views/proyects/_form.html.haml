= form_for @proyect, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :titulo, :class => 'control-label'
    .controls
      = f.text_field :titulo, :class => 'text_field'
  .control-group
    = f.label :descripcion, :class => 'control-label'
    .controls
      = f.text_area :descripcion, :class => 'text_area'
  .control-group
    = f.label :fecha_inicio, :class => 'control-label'
    .controls
      = f.date_select :fecha_inicio, :class => 'date_select'
  .control-group
    = f.label :fecha_finalizacion, :class => 'control-label'
    .controls
      = f.date_select :fecha_finalizacion, :class => 'date_select'
  .control-group
    = f.label :proyect_status_id, :class => 'control-label'
    .controls
      = collection_select :proyect, :proyect_status_id, ProyectStatus.all, :id, :estado
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = collection_select :proyect, :user_id, User.all, :id, :name
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), proyects_path, :class => 'btn'
