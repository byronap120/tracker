- model_class = @task.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:titulo) + ':'
  %br
  = @task.titulo
%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @task.descripcion
%p
  %strong= model_class.human_attribute_name(:fecha_inicio) + ':'
  %br
  = @task.fecha_inicio
%p
  %strong= model_class.human_attribute_name(:fecha_finalizacion) + ':'
  %br
  = @task.fecha_finalizacion
%p
  %strong= model_class.human_attribute_name(:dificultad) + ':'
  %br
  = @task.dificultad
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = User.find(@task.user_id).name
%p
  %strong= model_class.human_attribute_name(:proyect_id) + ':'
  %br
  = @task.proyect_id
%p
  %strong= model_class.human_attribute_name(:task_type_id) + ':'
  %br
  = TaskType.find(@task.task_type_id).tipo

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
